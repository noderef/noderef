{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Vite (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/apps/renderer/src",
      "sourceMaps": true,
      "preLaunchTask": "dev:renderer"
    },
    {
      "name": "Debug Neutralino",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/neu",
      "args": ["run"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "preLaunchTask": "dev:backend"
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": ["Debug Vite (Chrome)", "Debug Neutralino"]
    }
  ]
}
