{
  "name": "@app/backend",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "run-p ai:watch dev:server",
    "dev:server": "NODE_OPTIONS='--disable-warning=DEP0128' nodemon",
    "ai:build:src": "tsx src/ai/scripts/build-libs.ts --outDir src",
    "ai:build:dist": "tsx src/ai/scripts/build-libs.ts --outDir dist",
    "ai:build": "pnpm run ai:build:src",
    "ai:watch": "tsx src/ai/scripts/build-libs.ts --watch --outDir src",
    "build": "pnpm run ai:build:src && tsc && pnpm run ai:build:dist",
    "build:bundle": "node scripts/bundle.js",
    "prisma:generate": "prisma generate && node scripts/fix-prisma-client.js",
    "prisma:migrate": "node scripts/migrate-dev.js",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@alfresco/js-api": "9.1.1",
    "@app/contracts": "workspace:*",
    "@anthropic-ai/sdk": "^0.69.0",
    "@prisma/client": "^6.19.0",
    "@types/multer": "^2.0.0",
    "compression": "1.7.4",
    "dotenv": "^17.2.3",
    "express": "5.1.0",
    "express-rate-limit": "8.1.0",
    "helmet": "8.1.0",
    "multer": "^2.0.2",
    "pino": "10.0.0",
    "prisma": "^6.19.0",
    "esbuild": "^0.19.12",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/node": "^20.19.24",
    "axios": "^1.13.2",
    "npm-run-all": "^4.1.5",
    "nodemon": "^3.1.10",
    "pino-pretty": "^10.3.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.0"
  }
}
